datasource db {
  provider = "sqlite"
  url      = "file:../database/cfin.db"
}

generator client {
  provider = "prisma-client-js"
}

model UserConfig {
  id           Int           @id @default(autoincrement())
  username     String        @unique
  password     String
  role         String        @default("user")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  sharedFolders      SharedFolders[]
}

model SharedFolders {
  id             Int          @id @default(autoincrement())
  userId         Int
  folderName     String
  folderPath     String      @unique
  description    String?
  folderSize     Int         @default(0)
  public         Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  readPermission Boolean     @default(true)
  writePermission Boolean    @default(false)
  files          SharedFiles[]

  user           UserConfig  @relation(fields: [userId], references: [id])
}

model SharedFiles {
  id             Int          @id @default(autoincrement())
  folderId       Int
  fileName       String
  filePath       String
  fileSize       Int  
  fileType       String?
  fileExtension  String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  accessCount    Int         @default(0)
  lastAccessed   DateTime?
  totalWatchTime Int         @default(0)

  folder         SharedFolders @relation(fields: [folderId], references: [id])
}